pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                "Compile and package the code using Maven"
                Tool: "Maven"
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                "Run unit tests using JUnit or TestNG"
                Tool: "JUnit, TestNG"
                "Run integration tests using tools specific to your application"
            }
        }
        stage('Code Analysis') {
            steps {
                "Integrate a code analysis tool like Checkstyle or FindBugs"
                Tool: "Jenkins plugin for static code analysis"
            }
        }
        stage('Security Scan') {
            steps {
                "Perform a security scan using a tool like OWASP Dependency-Check"
                Tool: "Jenkins plugin for security scanning"
            }
        }
        stage('Deploy to Staging') {
            steps {
                "Deploy the application to a staging server using deployment tools like AWS CLI"
                Tool: "Jenkins plugin for deployment"
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                "Run integration tests on the staging environment"
                Tool: "Integration testing tools specific to your application"
            }
        }
        stage('Deploy to Production') {
            steps {
                "Deploy the application to a production server using deployment tools like AWS CLI"
                Tool: "Jenkins plugin for deployment"
            }
        }
    }
    
    post {
        success {
            mail to: "bhanusinghthakur1002@gmail.com"
            subject: "Pipeline Succeeded"
            body: "Pipeline Status:Success"
        }
        failure {
            mail to: "bhanusinghthakur1002@gmail.com"
            subject: "Pipeline Failed"
            body: "Pipeline Status: Failure"
        }
    }
}
