pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                bat "mvn clean compile package" // Compile and package the code using Maven
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                bat "mvn test" // Run unit tests using Maven
                bat "echo Running integration tests..." // Placeholder for running integration tests
            }
        }
        stage('Code Analysis') {
            steps {
                bat "mvn checkstyle:check" // Run Checkstyle
                bat "mvn findbugs:check" // Run FindBugs
            }
        }
        stage('Security Scan') {
            steps {
                bat "mvn verify -DskipTests" // Perform a security scan using OWASP Dependency-Check
            }
        }
        stage('Deploy to Staging') {
            steps {
                bat "aws ecs deploy-staging" // Deploy the application to a staging server using AWS ECS CLI
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                bat "mvn integration-test" // Run integration tests on the staging environment
            }
        }
        stage('Deploy to Production') {
            steps {
                bat "aws ecs deploy-production" // Deploy the application to a production server using AWS ECS CLI
            }
        }
    }
    
    post {
        success {
            mail to: "bhanusinghthakur1002@gmail.com",
            subject: "Pipeline Succeeded",
            body: "Pipeline Status: Success"
        }
        failure {
            mail to: "bhanusinghthakur1002@gmail.com",
            subject: "Pipeline Failed",
            body: "Pipeline Status: Failure"
        }
    }
}
